<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_four_func"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.cmu.rdioso.fourfunc.FourFuncActivity">

    <TextView
        android:id="@+id/calcOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/activity_output_text_size"
        android:text="00000000"/>

    <Button
        android:id="@+id/buttonBlank"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/buttonNum0"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonBlank"
        android:textSize="@dimen/activity_button_text_size"
        android:text="0"/>
    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/buttonNum0"
        android:textSize="@dimen/activity_button_text_size"
        android:text="="/>
    <Button
        android:id="@+id/buttonNum1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonBlank"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="1"/>
    <Button
        android:id="@+id/buttonNum2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonBlank"
        android:layout_toRightOf="@id/buttonBlank"
        android:textSize="@dimen/activity_button_text_size"
        android:text="2"/>
    <Button
        android:id="@+id/buttonNum3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonBlank"
        android:layout_toRightOf="@id/buttonNum0"
        android:textSize="@dimen/activity_button_text_size"
        android:text="3"/>
    <Button
        android:id="@+id/buttonNum4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum1"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="4"/>
    <Button
        android:id="@+id/buttonNum5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum1"
        android:layout_toRightOf="@id/buttonBlank"
        android:textSize="@dimen/activity_button_text_size"
        android:text="5"/>
    <Button
        android:id="@+id/buttonNum6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum1"
        android:layout_toRightOf="@id/buttonNum0"
        android:textSize="@dimen/activity_button_text_size"
        android:text="6"/>
    <Button
        android:id="@+id/buttonNum7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum4"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="7"/>
    <Button
        android:id="@+id/buttonNum8"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum4"
        android:layout_toRightOf="@id/buttonBlank"
        android:textSize="@dimen/activity_button_text_size"
        android:text="8"/>
    <Button
        android:id="@+id/buttonNum9"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonNum4"
        android:layout_toRightOf="@id/buttonNum0"
        android:textSize="@dimen/activity_button_text_size"
        android:text="9"/>

    <Button
        android:id="@+id/buttonOpPlus"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="+"/>
    <Button
        android:id="@+id/buttonOpMinus"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonOpPlus"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="-"/>
    <Button
        android:id="@+id/buttonOpTimes"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonOpMinus"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="*"/>
    <Button
        android:id="@+id/buttonOpDiv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_button_height"
        android:layout_above="@id/buttonOpTimes"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/activity_button_text_size"
        android:text="รท"/>

</RelativeLayout>